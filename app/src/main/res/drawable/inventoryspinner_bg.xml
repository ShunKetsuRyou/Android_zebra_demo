<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    //第一組item 圓角邊框。
    <item>
        <shape>
            <stroke
                android:width="1dp"
            android:color="@color/officialBlack" />		//邊框線顏色
            <solid android:color="#ffffff" >		//背景顏色
            </solid>
            <padding android:right="1dp" />		//邊距
        </shape>
    </item>
    //第二組item 插入圖片(spinner箭頭)
    <item>
        <bitmap
            android:gravity="end"
        android:src="@drawable/images" />	//箭頭圖片
    </item>
</layer-list>
